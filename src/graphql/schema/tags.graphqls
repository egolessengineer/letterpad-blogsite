type Tags {
  id: Int!
  name: String!
  desc: String
  slug: String!
  posts: PostsNode
}

input TagsFilters {
  active: Boolean
  name: String
}

type EditTaxResponse {
  ok: Boolean!
  id: Int
  errors: [Error!]
}

type Query {
  tags(filters: TagsFilters): [Tags!]!
}

