  "main": "start.js",
  "scripts": {
    "build": "NODE_ENV=production  webpack --colors --display-error-details --config webpack/webpack.prod.js --env.theme=${theme}",
    "build:theme": "NODE_ENV=production webpack --colors --display-error-details --config webpack/webpack.theme.prod.js --env.theme=${theme}",
    "build:admin": "NODE_ENV=production webpack --colors --display-error-details --config webpack/webpack.admin.prod.js",
    "clean": "rm -rf data && rm -rf public/uploads",
    "seed": "node ./api/seed",
    "preinstall": "./utils/preinstall.sh",
    "dev": "NODE_ENV=dev concurrently --kill-others \"node ./server.js --profile --json\" \"webpack --config webpack/webpack.dev.js --env.theme=${theme}\"",
    "prod": "NODE_ENV=production concurrently \"node ./server.js\"",
    "prodPm2": "./forever.sh",
    "test": "NODE_ENV=test jest --runInBand",
    "translate": "node ./utils/translation_tools",
    "precommit": "./utils/precommit.sh"
  },
