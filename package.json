{
  "name": "letterpad",
  "version": "1.4.0",
  "description": "Letterpad is an open-source and a high performant publishing engine for blogs built with react & graphql and runs ridiculously fast ðŸš€",
  "main": "start.js",
  "scripts": {
    "build": "./utils/convertToes5.sh && webpack --env.NODE_ENV=production --colors --display-error-details --config webpack/webpack.prod.js --env.theme=${theme}",
    "build:theme": "webpack --env.NODE_ENV=production --colors --display-error-details --config webpack/webpack.theme.prod.js --env.theme=${theme}",
    "build:admin": "webpack --env.NODE_ENV=production --colors --display-error-details --config webpack/webpack.admin.prod.js",
    "seed": "node ./src/api/seed",
    "preinstall": "./utils/preinstall.sh",
    "postinstall": "./utils/postinstall.sh",
    "dev": "NODE_ENV=dev concurrently --kill-others \"node ./src/server.js --profile --json\" \"webpack --config webpack/webpack.dev.js --env.theme=${theme}\"",
    "api": "NODE_ENV=dev concurrently --kill-others \"nodemon --watch src/api ./src/server.js\"",
    "prod": "NODE_ENV=production concurrently --kill-others \"node ./dist/server.js\"",
    "start": "yarn prod",
    "prodPm2": "./forever.sh",
    "static": "NODE_ENV=production & MODE=static concurrently \"node ./server.js\"",
    "test": "NODE_ENV=test jest --runInBand",
    "translate": "node ./utils/translation_tools",
    "precommit": "./utils/precommit.sh"
  },
  "env": {
    "jest": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ajaxtown/letterpad.git"
  },
  "author": "Abhishek Saha",
  "license": "MIT",
  "homepage": "http://ajaxtown.com",
