{
    "name": "letterpad",
    "version": "1.0.0",
    "description": ":) ",
    "main": "start.js",
    "private": true,
    "scripts": {
        "start-prod": "better-npm-run start-prod",
        "build":
            "NODE_ENV=production  webpack --verbose --colors --display-error-details --config webpack/webpack.config.prod.js",
        "build-theme":
            "NODE_ENV=production  webpack --verbose --colors --display-error-details --config webpack/webpack.theme.prod.js --env.theme=${THEME}",
        "start-dev": "better-npm-run start-dev",
        "insert-fake": "better-npm-run insert-fake",
        "_dev":
            "NODE_ENV=dev concurrently --kill-others \"nodemon -w api ./api/start.js\" \"node ./start.js --profile --json\"",
        "dev":
            "NODE_ENV=dev concurrently --kill-others \"nodemon -w api ./api/start.js\" \"node ./start.js --profile --json\" \"webpack --config webpack/webpack.dev.js --watch --env.theme=${THEME}\"",
        "test": "jest --runInBand"
    },
    "betterScripts": {
        "insert-fake": {
            "command": "babel-node ./api/faker/data.js"
        },
        "start-prod": {
            "command": "nodemon -w api ./api/start.js & node ./start.js",
            "env": {
                "NODE_ENV": "production"
            }
        },
        "start-dev": {
            "command": "node ./start.js --profile --json",
            "env": {
                "NODE_ENV": "dev"
            }
        },
        "start-test-server": {
            "command": "babel-node ./api/server.js --profile --json",
            "env": {
                "NODE_ENV": "dev"
            }
        },
        "build": {
            "command":
                "webpack --verbose --colors --display-error-details --config webpack/webpack.config.prod.js",
            "env": {
                "NODE_ENV": "production"
            }
        }
    },
