/*--------------------------------------
[Toolbar]
*--------------------------------------*/
.toolbar-container {
    position: fixed;
    bottom: 0px;
    width: 100%;
    left: 0px;
    z-index: 9;

    background: linear-gradient(transparent, #dbdbdb);
    height: 80px;
    display: flex;
    flex-flow: column-reverse;
}
.toolbar-menu {
    padding: 8px;
    background: #fff;
    text-align: center;
    border-top: 1px solid #ddd;
}
.button {
    color: #ccc;
    cursor: pointer;
}
.material-icons {
    font-size: 18px;
    vertical-align: text-bottom;
}
.menu > * + * {
    margin-left: 8px;
}
.menu > * {
    display: inline-block;
}

.article-holder {
    max-width: 767px;
    width: 100%;
    margin: 80px auto 0;
    padding: 0 10px;
}
.hover-menu {
    padding: 8px 7px 6px;
    position: absolute;
    z-index: 1;
    top: -10000px;
    left: -10000px;
    margin-top: -6px;
    opacity: 0;
    background-color: #222;
    border-radius: 4px;
    transition: opacity 0.75s;
}
