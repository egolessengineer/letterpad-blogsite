.modal-open {
    .article-holder {
        z-index: 999;
    }
}

/*--------------------------------------
[Edit/Create Post or Page]
*/
.post-title {
    margin: 0px;
}
.post-excerpt {
    display: block;
    min-height: 80px;
}
.featured-image {
    img {
        object-fit: cover;
        height: 100%;
    }
    .btn {
        margin-top: -48px;
    }
    height: 200px;
}
.file-explorer .post-thumbnail img {
    height: 100px;
    object-fit: cover;
    overflow: hidden;
}

.action-bar {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.post-header {
    display: block;
}

.post-grid .post {
    margin-bottom: 0px;
    box-shadow: -2px 2px 14px -2px #ccc;
}

/*!------------------------------------------------------------------
[Post Filters]
*/

.post-filters {
    text-transform: uppercase;
    font-size: 12px;
    color: #afafaf;
    .filter-item:not(:last-child):after {
        content: "|";
        margin: 0px 10px;
        color: #afafaf;
    }
    .filter-item {
        transition: 0.3s all linear;
        cursor: pointer;
        &.active {
            font-weight: 600;
            color: var(--color-text-secondary);
        }
    }
}

/*!------------------------------------------------------------------
[Post]
*/
.post-thumbnail img {
    width: 100%;
    max-width: none;
}
.hljs code {
    line-height: 2.5rem !important;
}
.post-content {
    font-size: 18px;
    hr {
        margin-top: 52px;
        margin-bottom: 42px;
        display: block;
        border: 0;
        text-align: center;
        overflow: visible;
        &:before {
            font-family: Georgia, Cambria, "Times New Roman", Times, serif;
            font-weight: 400;
            font-style: italic;
            font-size: 30px;
            letter-spacing: 0.6em;
            content: "...";
            display: inline-block;
            margin-left: 0.6em;
            color: rgba(0, 0, 0, 0.68);
            position: relative;
            top: -30px;
        }
    }
}
.post {
    h1:first-child,
    h2:first-child,
    h3:first-child,
    h4:first-child,
    h5:first-child,
    h6:first-child {
        margin-top: 0px;
    }
    p > img {
        width: 100%;
        max-width: none;
    }
    .post-header {
        .post-meta {
            color: var(--color-text-muted);
            padding: 8px 0px;
        }
    }

    .post-title {
        font-weight: 600;
        flex: 1;
        min-height: 60px;
        text-transform: initial;
        a {
            font-weight: 500;
            color: var(--color-text-primary);
            margin: 0 0 10px;
        }
    }
    a.post-more {
        background: var(--color-text-secondary);
        color: var(--color-border);
        border: 1px solid var(--color-text-secondary);
        padding: 6px 10px;
        transition: all 0.2s linear;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 11px;
        &:hover {
            background: var(--color-border);
            color: var(--color-text-secondary);
            border: 1px solid var(--color-text-secondary);
        }
    }
    .slider {
        img {
            margin-left: 0;
            margin-right: 0;
        }
        &.owl-carousel {
            width: 120%;
            margin-left: -10%;
            margin-right: -10%;
        }
    }
    .fluid-width-video-wrapper {
        width: 120%;
        margin-left: -10%;
        margin-right: -10%;
    }
    .gallery {
        margin-left: -10%;
        margin-right: -10%;
    }

    .footer {
        margin: 0 -20px -20px;
        padding: 8px 22px;
        background: #eeeeee69;
        font-size: 12px;
        border-top: 1px solid #e4e4e4;
        min-height: 36px;
        display: flex;
        justify-content: space-between;
    }
}
.no-preview {
    display: flex;
    height: 50vh;
    align-items: center;
    justify-content: center;
}
@media (max-width: 991px) {
    .post p > img,
    .post-thumbnail img {
        max-width: 100%;
        margin-left: 0;
        margin-right: 0;
    }
    .post {
        .slider.owl-carousel,
        .fluid-width-video-wrapper {
            max-width: 100%;
            margin-left: 0;
            margin-right: 0;
        }
        pre,
        .gallery,
        blockquote {
            margin-left: 0;
            margin-right: 0;
        }
    }
    .preview {
        display: none !important;
    }
}

pre.CodeFlask__pre {
    opacity: 0;
}
textarea.CodeFlask__textarea {
    opacity: 1;
    font-size: 16px;
    line-height: 27.2px !important;
    font-family: "Source Sans Pro", sans-serif;
    &::-webkit-scrollbar {
        width: 0px;
    }
    &:hover::-webkit-scrollbar {
        width: 4px;
    }
}

/*!------------------------------------------------------------------
[Post Preview]
*/
.create-post-page,
.edit-post-page,
.create-page-page {
    .preview {
        font-size: 16px;
        .post-content {
            border-top: 1px solid #e2e2e2;
            overflow-y: auto;
            &::-webkit-scrollbar {
                width: 4px;
            }
        }
    }
}

/*!------------------------------------------------------------------
[Post Publish]
*/
.post-publish {
    display: flex;
    background: #fff;
    box-shadow: 0 0 16px 0px #ddd;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    width: 100%;
    padding: 10px 20px;
    z-index: 999;
}

/*!------------------------------------------------------------------
[ZenView]
*/
.zen-view {
    display: none;
}
.edit-post-page,
.create-post-page {
    .zen-view {
        display: block;
    }
}
.toggle-zenview {
    position: fixed;
    right: 76px;
    top: 39px;
    i {
        color: #000;
        font-size: 22px;
    }
}
